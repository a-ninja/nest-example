generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model product {
  id              Int         @id @default(autoincrement())
  description     String
  name            String
  productId       String
  createdAt       DateTime    @default(now())
  //manufacturer    manufacturer @relation(fields: [manufacturerId], references: [id])
  manufacturerId  String // relation scalar field  (used in the `@relation` attribute a
}

